<div class='menus'>
    <div class='menu-index'>
        <%= form_tag(choosen_menus_reservations_path, method: :post) do %>
            <div class='menu'>
                <div class='item-category'>
                    <div class='category'>
                        <%= @haircut %>
                    </div>
                        <% @menus.each do |menu| %>
                            <%= render 'menus', menu: menu %>
                        <% end %>
                    <div class='category'>
                        <%= @colour %>
                    </div>
                        <% @menus2.each do |menu2| %>
                            <%= render 'menus', menu: menu2 %>
                        <% end %>
                    <div class='category'>
                        <%= @curl %>
                    </div>
