                            <%= render 'menus', menu: menu3  %>
                        <% end %>
                    <div class='category'>
                        <%= @treatment %>
                    </div>
                        <% @menus4.each do |menu4| %>
                            <%= render 'menus', menu: menu4 %>
                        <% end %>
                    <div class='category'>
                        <%= @setting_your_hair %>
                    </div>
                        <% @menus5.each do |menu5| %>
                            <%= render 'menus', menu: menu5 %>
                        <% end %>
                    <div class='category'>
                        <%= @other %>
                    </div>
                        <% @menus6.each do |menu6| %>
                            <%= render 'menus', menu: menu6 %>
                        <% end %>
                    <div class='category'>
                        選択済み
                    </div>
                        <div class='item' style="display:none" id="selectedMenu">
                            <div class='item1'>
                                <div class='item2'>
                                    <div class='name' id='selected_Name'>
                                          
                                    </div>
                                    <div class='item-price-time'>
                                        <div class='price' id='selected_Price'>
                                            ￥0    
                                        </div>
                                        <div class='required_time' id='selected_Time'>
                                            0分
                                        </div>
                                    </div>
                                </div>
                                <div class='item3'>
                                    <div class='detail'>
                                    
                                    </div>
                                    <div class='edit-delete'>
                                        
                                    </div>
                                </div>
                            </div>
                        </div> 

                        <div class='item' id='total'>
                            <div class='item1'>
                                <div class='item2'>
                                    <div class='name'>
                                        合計   
                                    </div>
                                    <div class='item-price-time'>
                                        <div class='price' id='totalPrice', price='0'>
                                            ￥0    
                                        </div>
                                        <div class='required_time' id='totalTime' time='0'>
